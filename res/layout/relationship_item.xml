<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dip"
    android:paddingBottom="8dip">
    <TextView android:id="@+id/title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="服务工程师"
        android:textSize="16sp"
        android:layout_alignParentRight="true"
        android:paddingTop="6dip"
        android:paddingBottom="6dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:background="#ff16a78a"
        android:textColor="@color/wt" />
    <com.bestjoy.app.haierwarrantycard.view.AvatorImageView 
        android:id="@+id/avator"
        android:layout_height="67dip"
        android:layout_width="67dip"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dip"
        android:layout_marginRight="4dip"
        android:src="@drawable/baoxiuka_avator_default"/>
    <TextView android:id="@+id/name"
        android:layout_alignTop="@+id/avator"
        android:layout_toRightOf="@+id/avator"
        android:layout_marginLeft="6dip"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="张三"
        android:textSize="20sp"
        android:textColor="@color/blk" />
    <!-- 工作年限 -->
     <TextView android:id="@+id/workexperience"
        android:layout_alignBottom ="@+id/name"
        android:layout_toRightOf="@+id/name"
        android:layout_marginLeft="10dip"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="5年"
        android:textColor="@color/blk" />
     <!-- 店名 -->
      <TextView android:id="@+id/storenametitle"
        android:layout_toRightOf="@+id/avator"
        android:layout_below="@+id/name"
        android:layout_marginLeft="6dip"
        android:layout_marginTop="6dip"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/title_store_name"
        android:textColor="@color/blk" />
      
      <TextView android:id="@+id/storename"
        android:layout_toRightOf="@+id/storenametitle"
        android:layout_below="@+id/name"
        android:layout_marginLeft="6dip"
        android:layout_marginTop="6dip"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/title_store_name"
        android:textColor="@color/blk" />
      <!-- @string/title_store_name -->
      <!-- 类别 -->
      <TextView android:id="@+id/typenametitle"
        android:layout_toRightOf="@+id/avator"
        android:layout_below="@+id/storename"
        android:layout_marginLeft="6dip"
        android:layout_marginTop="6dip"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/title_type_name"
        android:textColor="@color/blk" />
      
       <TextView android:id="@+id/typename"
        android:layout_toRightOf="@+id/typenametitle"
        android:layout_below="@+id/storename"
        android:layout_marginLeft="6dip"
        android:layout_marginTop="6dip"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/title_type_name"
        android:textColor="@color/blk" />
       
       <!-- 地址 -->
      <TextView android:id="@+id/workplacetitle"
        android:layout_toRightOf="@+id/avator"
        android:layout_below="@+id/typename"
        android:layout_marginLeft="6dip"
        android:layout_marginTop="6dip"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/title_workplace_name"
        android:textColor="@color/blk" />
      
       <TextView android:id="@+id/workplace"
        android:layout_toRightOf="@+id/workplacetitle"
        android:layout_below="@+id/typename"
        android:layout_marginLeft="6dip"
        android:layout_marginTop="6dip"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="dsadsadsadsadsadsadsadsadsadsadsadsdsadsasdasadsadsdsada dsadsa dsa ds ad sa dsa dsa ds ad sa dsa dsa ds a"
        android:textColor="@color/blk" />
</RelativeLayout>
