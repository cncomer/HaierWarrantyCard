<?xml version="1.0" encoding="utf-8"?>
<com.bestjoy.app.haierwarrantycard.view.BaoxiuCardViewSalemanInfoView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView android:id="@+id/title"
        android:layout_height="wrap_content"
        android:layout_width="155dip"
        android:gravity="center"
        android:textColor="@color/blk"/>

    <ImageView android:id="@+id/avator"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:src="@drawable/baoxiuka_avator_default_scan"
        android:layout_height="196dip"
        android:layout_width="155dip"
        android:layout_below="@+id/title"/>
    
    <TextView android:id="@+id/name"
        android:layout_height="wrap_content"
        android:layout_width="155dip"
        android:gravity="center"
        android:text="No name"
        android:layout_below="@+id/avator"
        android:textColor="@color/blk"/>
    <!-- actions -->
    <LinearLayout android:id="@+id/actions_layout"
        android:layout_alignTop="@+id/avator"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_alignBottom="@+id/avator"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/avator">
        <ImageButton android:id="@+id/button_call"
            android:layout_height="40dp"
            android:layout_width="69dp"
            android:src="@drawable/baoxiuka_tel"
            android:background="#ff52c040"/>
        
        <ImageButton android:id="@+id/button_sms"
            android:layout_height="40dp"
            android:layout_width="69dp"
            android:src="@drawable/baoxiuka_sms"
            android:layout_marginTop="12dp"
            android:background="#ff52c040"/>
        
        <ImageButton android:id="@+id/button_info"
            android:layout_height="40dp"
            android:layout_width="69dp"
            android:src="@drawable/baoxiuka_info"
            android:layout_marginTop="12dp"
            android:background="#ff52c040"/>
        
        <ImageButton android:id="@+id/button_shop"
            android:layout_height="40dp"
            android:layout_width="69dp"
            android:src="@drawable/baoxiuka_shop"
            android:layout_marginTop="12dp"
            android:background="#ff52c040"/>
    </LinearLayout>
    
</com.bestjoy.app.haierwarrantycard.view.BaoxiuCardViewSalemanInfoView>
