<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cncom__title_layout"
    android:layout_width="match_parent"
    android:layout_height="48dip"
    android:background="#ff165ec0"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/cncom__up"
        android:minWidth="48dip"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:scaleType="center"
        android:layout_centerVertical="true"
        android:background="@drawable/abs__item_background_holo_light"
        android:src="@drawable/home_up" />
    
    <com.actionbarsherlock.internal.widget.IcsLinearLayout
        android:id="@+id/cncom__action_menu"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">
	     <ImageView
	        android:id="@+id/menu_other"
	        android:layout_width="48dip"
	        android:layout_height="fill_parent"
	        android:scaleType="center"
	        android:background="@drawable/abs__item_background_holo_light"
	        android:src="@drawable/menu_more" />
	      
	       <ImageView
	        android:id="@+id/menu_more"
	        android:layout_width="48dip"
	        android:layout_height="fill_parent"
	        android:scaleType="center"
	        android:background="@drawable/abs__item_background_holo_light"
	        android:src="@drawable/menu_more" />
     </com.actionbarsherlock.internal.widget.IcsLinearLayout>
     
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/cncom__title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="测试ibiaoti"
            android:textColor="@color/wt"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cncom__subtitle"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>